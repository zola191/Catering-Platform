{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CateringPlatformConnectionString": "Host=localhost;Port=5434;Username=postgres;Password=postgres;Database=catering_platform",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "a-string-secret-at-least-256-bits-long", //не менее 32 символов
    "Issuer": "catering_service_issuer",
    "Audience": "test_audience",
    "ExpiryInMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:8080",
          "apiKey": "",
          "compact": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "CateringPlatform",
      "Environment": "Development"
    }
  }
}


